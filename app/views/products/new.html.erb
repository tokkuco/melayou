<h1>Create a new Product</h1>

<%= form_for(@product) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_area :price %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
